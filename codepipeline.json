{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "PHP Application CodePipeline",
  "Parameters": {
    "ProjectName": {
      "Type": "String",
      "Description": "Name of the project for this pipeline"
    },
    "Environment": {
      "Type": "String",
      "Description": "Environment type e.g development, or production.",
      "Default": "development",
      "AllowedValues": [
        "development",
        "production"
      ]
    },
    "GitHubUserName": {
      "Type": "String",
      "Description": "Github username for the repository"
    },
    "GitHubRepository": {
      "Type": "String",
      "Description": "Github repository for the project"
    },
    "GitHubBranch": {
      "Type": "String",
      "Description": "GitHub branch",
      "Default": "development"
    },
    "GitHubOAuthToken": {
      "Type": "String",
      "Description": "Github OAth token",
      "NoEcho": true
    },
    "EC2TagKey": {
      "Type": "String",
      "Description": "EC2 tag key for the server to deploy"
    },
    "EC2TagValue": {
      "Type": "String",
      "Description": "EC2 tag value for the server to deploy"
    }
  },
  "Resources": {
    "WebHook": {
      "Type": "AWS::CodePipeline::Webhook",
      "Properties": {
        "Authentication": "GITHUB_HMAC",
        "AuthenticationConfiguration": {
          "SecretToken": null
        },
        "Filters": [
          {
            "JsonPath": "$.ref",
            "MatchEquals": "refs/heads/{Branch}"
          }
        ],
        "Name": null,
        "TargetAction": null,
        "TargetPipeline": null,
        "TargetPipelineVersion": 1
      }
    },
    "CodePipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "Properties": {
        "ArtifactStore": {
          "Location": null,
          "Type": "S3"
        },
        "Name": null,
        "RoleArn": null,
        "Stages": [
          {
            "Name": "Github",
            "Actions": [
              {
                "Name": null,
                "ActionTypeId": {
                  "Category": "Source",
                  "Owner": "ThirdParty",
                  "Version": 1,
                  "Provider": "GitHub"
                },
                "OutputArtifacts": [
                  {
                    "Name": null
                  }
                ],
                "Configuration": {
                  "Owner": null,
                  "Repo": null,
                  "Branch": null,
                  "OAuthToken": null
                }
              }
            ]
          },
          {
            "Name": "Build",
            "Actions": [
              {
                "Name": null,
                "ActionTypeId": {
                  "Category": "Build",
                  "Owner": "AWS",
                  "Version": 1,
                  "Provider": "CodeBuild"
                },
                "InputArtifacts": [
                  {
                    "Name": null
                  }
                ],
                "OutputArtifacts": [
                  {
                    "Name": null
                  }
                ],
                "Configuration": {
                  "ProjectName": null
                }
              }
            ]
          },
          {
            "Name": "Deploy",
            "Actions": [
              {
                "Name": null,
                "InputArtifacts": [
                  {
                    "Name": null
                  }
                ],
                "ActionTypeId": {
                  "Category": "Deploy",
                  "Owner": "AWS",
                  "Version": 1,
                  "Provider": "CodeDeploy"
                },
                "Configuration": {
                  "ApplicationName": null,
                  "DeploymentGroupName": null
                }
              }
            ]
          }
        ]
      }
    },
    "S3ArtifactsBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "CodeBuild": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "Artifacts": {
          "Type": "CODEPIPELINE"
        },
        "Description": null,
        "Environment": {
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "Type": "LINUX_CONTAINER",
          "Image": "noodlesegg/php56",
          "EnvironmentVariables": [
            {
              "Name": "ENVIRONMENT",
              "Value": null
            },
            {
              "Name": "GITHUB_TOKEN",
              "Value": null
            }
          ]
        },
        "ServiceRole": null,
        "Source": {
          "Type": "CODEPIPELINE"
        }
      }
    },
    "CodeDeploy": {
      "Type": "AWS::CodeDeploy::Application",
      "Properties": {
        "ComputePlatform": "Server"
      }
    },
    "DeploymentGroup": {
      "Type": "AWS::CodeDeploy::DeploymentGroup",
      "Properties": {
        "ApplicationName": null,
        "ServiceRoleArn": null,
        "Ec2TagFilters": [
          {
            "Type": "KEY_AND_VALUE",
            "Key": null,
            "Value": null
          }
        ]
      }
    },
    "CodePipelineServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codepipeline.amazonaws.com",
                  "codebuild.amazonaws.com",
                  "codedeploy.amazonaws.com"
                ]
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "codePipeline-policies",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*",
                    "codebuild:*",
                    "codedeploy:*",
                    "s3:*",
                    "ec2:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  }
}